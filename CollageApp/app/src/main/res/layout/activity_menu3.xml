<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/magagment_3" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:src="@drawable/gym_1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="50dp"
                        android:textStyle="bold"
                        android:fontFamily="@string/bold"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="  1. Boys'Hostel"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gym_2" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@string/bold"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="  2. Gymnasium Hall"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gym_3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@string/bold"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:text="  3. Girls'Hostel"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gym_4"/>




                </LinearLayout>



            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>